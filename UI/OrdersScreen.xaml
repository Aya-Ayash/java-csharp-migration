<UserControl x:Class="aim.legacy.UI.OrdersScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <!-- Top: Header -->
        <TextBlock DockPanel.Dock="Top" Text="Orders" FontSize="16" Margin="10"/>

        <!-- Bottom: Button panel -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="10">
            <Button Content="New Order" Width="100" Margin="0,0,10,0" Click="NewOrderButton_Click"/>
            <Button Content="Edit Order" Width="100" Margin="0,0,10,0" Click="EditOrderButton_Click"/>
            <Button Content="Delete Order" Width="100" Margin="0,0,10,0" Click="DeleteOrderButton_Click"/>
            <Button Content="Generate Report" Width="120" Click="GenerateReportButton_Click"/>
        </StackPanel>

        <!-- Center: Order table -->
        <DataGrid x:Name="OrderTable"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="60"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustName}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding OrderDate}" Width="*"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding SubtotalDisplay}" Width="80"/>
                <DataGridTextColumn Header="Discount" Binding="{Binding DiscountDisplay}" Width="80"/>
                <DataGridTextColumn Header="Tax" Binding="{Binding TaxDisplay}" Width="80"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalDisplay}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
